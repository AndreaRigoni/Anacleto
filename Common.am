## /////////////////////////////////////////////////////////////////////////////

define _set_export
export ARCH=$(ARCH); \
export CROSS_COMPILE=${CROSS_COMPILE}; \
export PATH=$${PATH}:$(TOOLCHAIN_PATH); \
export O=$(LINUX_BUILDDIR)
endef



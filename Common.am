print-env:
	@\
	$(_set_export); \
	echo ""; \
	echo "---[KERNEL BUILD]----------------------------------------------------------"; \
	echo " compiler: ${CROSS_COMPILE}${CC}"; \
	echo " arch    : ${ARCH}"; \
	echo " flags   : ${LINUX_CFLAGS}"; \
	echo " TOOLCH  : ${TOOLCHAIN_PATH}"; \
	echo " PATH    : $${PATH}"; \
	echo " builddir: $${O}"; \
	echo "---------------------------------------------------------------------------"; \
	echo ""


